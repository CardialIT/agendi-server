// Tabela = Model

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Professional {
  id               Int    @id @default(autoincrement())
  nameProfessional String
  profession       String
  schedule         Scheduling[]

  @@map("professionals")
}

model Type {
  id   Int    @id @default(autoincrement())
  name String
  schedule Scheduling[]
}

model Client {
  id    Int    @id @default(autoincrement())
  name  String @unique
  email String
  phone String
  schedule Scheduling[]
}

model Scheduling {
  id             Int          @id @default(autoincrement())
  professional   Professional @relation(fields: [professionalId], references: [id])
  professionalId Int
  type           Type        @relation(fields: [typeId], references: [id])
  typeId         Int
  client         Client   @relation(fields: [clientId], references: [id])
  clientId       Int
  scheduleDate   DateTime
  schedulingDate DateTime
}
